  <!DOCTYPE html>
<html>
<%- include("partials/header") %>
<%- include("partials/nav") %>
<body>
  <br><br>
    <div class="card center  bg-secondary">
        <div class="card-header">
         <h5 class="card-title text-center text-light text-center">Pick Your Exercises!</h5>
        </div>
      <div class="card-body">
        <h6 class="card-title text-light">Select a region to target</h6>
         <select class="form-select form-select-lg" id="bodypart">
            <% for(let i = 0; i < bodyparts.length; i++) { %>
              <option value= "<%=  bodyparts[i] %>" > <%= bodyparts[i]%> </option>
            <% } %>
          </select>
        <br>
        <h6 class="card-title text-light">Select a day to add to your weekly plan</h6>
          <select class="form-select form-select-lg" id="days">
            <option value= "monday" > Monday  </option>
            <option value= "tuesday" > Tuesday </option>
            <option value= "wednesday" > Wednesday </option>
            <option value= "thursday" > Thursday </option>
            <option value= "friday" > Friday </option>
            <option value= "saturday" > Saturday </option>
            <option value= "sunday" > Sunday </option>
          </select>

          <br>
              
        <button id="showWorkouts" type="button" class="btn btn-warning"> Submit </button> <br>
      </div>
    </div>
   <div class="container text-center center">
        <div class="row" id="workouts">
          <!-- workouts from clicking button above should appear here -->
        </div>
   </div>
  
      
  <%- include("partials/footer") %>
    
</body>
</html>
    